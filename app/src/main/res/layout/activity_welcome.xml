<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yellow2"

    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:lineSpacingExtra="36sp"
        android:text="Welcome To Our World"
        android:textColor="#050101"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/meet"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:lineSpacingExtra="36sp"
        android:text="Meet A Few Members"
        android:textColor="#000000"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="149dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="99dp"
        android:layout_height="142dp"
        app:srcCompat="@drawable/monkey" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="163dp"
        android:layout_height="169dp"
        app:srcCompat="@drawable/dogs" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="271dp"
        android:layout_height="167dp"
        app:srcCompat="@drawable/bunnies" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="Next" />

</LinearLayout>